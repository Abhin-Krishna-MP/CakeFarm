@import "../../styles/_global.scss";

/* ─── Food Item Card ─── */
.foodItemCard {
  width: 100%;
  background: $bg-primary;
  border: 1.5px solid $card-border;
  border-radius: 20px;
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  box-shadow: $card-shadow;

  &:hover {
    transform: translateY(-4px);
    box-shadow: $card-shadow-hover;
  }

  .img-div {
    position: relative;
    width: 100%;
    padding-top: 56%;
    overflow: hidden;
    background: #F0EDE6;

    @media (max-width: 379px) { padding-top: 52%; }

    img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    &:hover img { transform: scale(1.05); }

    .disabled-overlay {
      position: absolute;
      inset: 0;
      background: rgba(255,255,255,0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2;

      span {
        background: rgba(26,26,26,0.85);
        color: #fff;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 6px 14px;
        border-radius: 999px;
        letter-spacing: 0.04em;
      }
    }

    .veg-badge {
      position: absolute;
      top: 8px;
      left: 8px;
      z-index: 2;
      width: 18px;
      height: 18px;
      border-radius: 3px;
      border: 1.5px solid currentColor;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(255,255,255,0.92);

      &.veg   { color: $bg-fill-color-green; }
      &.nonveg { color: $bg-fill-color-red; }

      &::after {
        content: "";
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: currentColor;
      }
    }
  }

  .item-description {
    padding: 0.7rem 0.75rem 0.85rem;
    display: flex;
    flex-direction: column;
    flex: 1;

    @media (min-width: 480px) { padding: 0.875rem 1rem 1rem; }

    h2 {
      font-size: 0.88rem;
      font-weight: 700;
      color: $text-primary;
      margin-bottom: 0.2rem;
      line-height: 1.3;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;

      @media (min-width: 480px) { font-size: 1rem; margin-bottom: 0.25rem; }
    }

    p {
      font-size: 0.72rem;
      color: $text-2-primary;
      line-height: 1.4;
      margin-bottom: 0.4rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;

      @media (min-width: 480px) { font-size: 0.8rem; margin-bottom: 0.5rem; }
    }

    .item-rating {
      display: flex;
      align-items: center;
      gap: 0.4rem;
      margin-bottom: 0.6rem;
      flex-wrap: wrap;

      @media (min-width: 480px) { gap: 0.75rem; margin-bottom: 0.75rem; }

      span {
        display: flex;
        align-items: center;
        gap: 2px;
        font-size: 0.7rem;
        font-weight: 500;
        color: $text-2-primary;

        @media (min-width: 480px) { font-size: 0.78rem; }

        .icon { font-size: 0.85rem; }
        .star { color: #f59e0b; }
        .veg  { color: $bg-fill-color-green; }
      }
    }

    .item-cost {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.25rem;
      margin-top: auto;

      > span {
        display: flex;
        align-items: center;
        gap: 2px;
        font-size: 1rem;
        font-weight: 800;
        color: $text-primary;
        flex-shrink: 0;

        @media (min-width: 480px) { font-size: 1.1rem; }

        .icon.rupee { font-size: 0.85rem; color: $text-2-primary; }
      }

      .add-to-cart {
        flex-shrink: 0;

        .icon {
          font-size: 1.85rem;
          color: #1A1A1A;
          cursor: pointer;
          transition: transform 0.15s ease;

          @media (min-width: 480px) { font-size: 2.1rem; }

          &:hover { transform: scale(1.15); }
        }

        .item-count {
          display: flex;
          align-items: center;
          background: #1A1A1A;
          border-radius: 999px;
          overflow: hidden;

          .icon-btn {
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            cursor: pointer;
            color: #FFFFFF;
            transition: background 0.15s;

            @media (min-width: 480px) { width: 32px; height: 32px; font-size: 1.1rem; }

            &:hover { background: rgba(255,255,255,0.12); }
          }

          span {
            min-width: 22px;
            text-align: center;
            font-size: 0.82rem;
            font-weight: 700;
            color: #FFFFFF;

            @media (min-width: 480px) { min-width: 28px; font-size: 0.9rem; }
          }
        }
      }
    }
  }

  &.disabled {
    opacity: 0.65;
    pointer-events: none;
    filter: grayscale(0.4);
  }
}
